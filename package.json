{
  "name": "astro-craftcms",
  "packageManager": "bun@1.1.13",
  "private": true,
  "scripts": {
    "cms": "bun run --filter astro-craftcms-cms", 
    "ssg:app": "bun run --filter astro-craftcms-app-ssg",
    "ssg:build": "bun run app-ssg build",
    "ssg:dev": "bun run cms restart && bun run app-ssg dev",
    "ssg:preview": "bun run app-ssg preview",
    "ssg:start": "bun run cms restart && bun run app-ssg start"
  },
  "workspaces": [
    "packages/*"
  ]
}
