---
import fetchApi from '@lib/craft-cms/fetch-api';
import url from '@lib/craft-cms/url.ts';
import type { Data } from '@page-configs/example-route';
import { query } from '@page-configs/example-route';

let data: Data | undefined;

if (import.meta.env.DEV) {
  const fetchedData = await fetchApi<Data>(query);
  if (fetchedData) {
    data = fetchedData as Data;
  }
} else {
  data = (await import('@cache/example-route/data.json').then(
    (m) => m.default,
  )) as Data;
}
---

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>sectionHandle</th>
      <th>sectionId</th>
      <th>title</th>
      <th>typeHandle</th>
      <th>typeId</th>
      <th>url</th>
      <th>visit</th>
    </tr>
  </thead>
  <tbody>
    {
      data?.entries.map((entry) => (
        <tr>
          <td>{entry.id}</td>
          <td>{entry.sectionHandle}</td>
          <td>{entry.sectionId}</td>
          <td>{entry.title}</td>
          <td>{entry.typeHandle}</td>
          <td>{entry.typeId}</td>
          <td>{url(entry.uri)}</td>
          <td>
            <a href={url(entry.uri)}>Go</a>
          </td>
        </tr>
      ))
    }
  </tbody>
</table>
