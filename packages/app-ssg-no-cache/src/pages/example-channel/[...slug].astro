---
/**
 * Pages for Craft's "Example Channel" section
 */

import { z } from 'zod';
import type { GetStaticPaths } from 'astro';
import config from '@config/sections/example-channel';
import fetchAPI from '@lib/craft-cms/fetch-api';
import staticPaths from '@lib/craft-cms/static-paths';

const { entrySchema } = config;
type Entry = z.infer<typeof entrySchema>;

/**
 * `Props` interface is tied to Astro.props
 * https://docs.astro.build/en/guides/typescript/#component-props
 */
interface Props {
  entry: Entry;
}

export const getStaticPaths = (async () => {
  const { query, querySchema, uriPrefix } = config;

  const data = await fetchAPI({
    query,
    schema: querySchema,
  });

  if (data === undefined) {
    return [];
  }

  return await staticPaths<(typeof data.entries)[number]>({
    entries: data.entries,
    uriPrefix,
  });
}) satisfies GetStaticPaths;

const { entry } = Astro.props;
---

{entry.title}
