/**
 * Pages for Craft's "Example Structure" section
 */

import fetchAPI from '@lib/craft-cms/fetch';
import staticPaths from '@lib/craft-cms/static-paths';
import url from '@lib/craft-cms/url';

interface Child {
  id: number;
  title: string;
  uri: string;
}

interface Parent {
  id: number;
  title: string;
  uri: string;
}

interface Entry {
  children: Child[];
  parent: Parent;
  title: string;
  uri: string;
}

interface Data {
  entries: Entry[];
}

export const getStaticPaths = async () => {
  const data = await fetchAPI<Data>(`{
    entries (section: "exampleStructure") {
      children {
        id
        title
        uri
      }
      parent {
        id
        title
        uri
      }
      title
      uri
    }
  }`);

  return await staticPaths<Entry>({
    entries: data?.entries,
    uriPrefix: 'example-structure',
  });
}; // satisfies GetStaticPaths; @TODO

/**
 * @TODO if `satisfies GetStaticPaths` were working
 * I think wouldn't need this entry -> entryProp -> entry redirection
 */
const { entry: entryProp } = Astro.props;

if (entryProp === undefined) {
  return new Response(null, { status: 404 });
}

const entry = entryProp as Entry;
---

<dl>
  <dt>title</dt>
  <dd>{entry.title}</dd>

  <dt>parent title</dt>
  <dd>{entry.parent?.title}</dd>

  <dt>parent URL</dt>
  <dd>{url(entry.parent?.uri)}</dd>

  <dt>children</dt>
  <dd>
    <ul>
      {
        entry.children.map((child) => (
          <li>
            <dl>
              <dt>title</dt>
              <dd>{child.title}</dd>

              <dt>URL</dt>
              <dd>{url(child.uri)}</dd>
            </dl>
          </li>
        ))
      }
    </ul>
  </dd>
</dl>
