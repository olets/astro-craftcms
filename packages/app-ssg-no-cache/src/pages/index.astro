---
import fetchAPI from '@lib/craft-cms/fetch';

interface Entry {
  title: string;
  uri: string;
}

interface Data {
  entries: Entry[];
}

const data = await fetchAPI<Data>(`{
  entries(section: "homepage") {
    title
    ... on homepage_Entry {
      exampleField
    }
  }
}`);

if (data?.entries === undefined || data.entries.length === 0) {
  return new Response(null, { status: 404 });
}

const entry = data.entries[0];
---

{entry.title}
