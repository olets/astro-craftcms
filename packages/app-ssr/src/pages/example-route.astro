---
import fetchApi from '@lib/craft-cms/fetch-api';
import url from '@lib/craft-cms/url.ts';

interface Data {
  entries: {
    sectionHandle: string;
    title: string;
    typeHandle: string;
    uri: string;
  }[];
}

const data = await fetchApi<Data>(`{
  entries {
    sectionHandle
    title
    typeHandle
    uri
  }
}`);

const entries = data?.entries;
---

<h1>My route</h1>

<table>
  <thead>
    <tr>
      <th>sectionHandle</th>
      <th>title</th>
      <th>typeHandle</th>
      <th>url</th>
      <th>visit</th>
    </tr>
  </thead>
  <tbody>
    {
      entries?.map((entry) => (
        <tr>
          <td>{entry.sectionHandle}</td>
          <td>{entry.title}</td>
          <td>{entry.typeHandle}</td>
          <td>{url(entry.uri)}</td>
          <td>
            <a href={url(entry.uri)}>Go</a>
          </td>
        </tr>
      ))
    }
  </tbody>
</table>
