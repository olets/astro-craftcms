---
import fetchContent from "@lib/craft-cms/fetch-content";

interface Entry {
  title: string;
}

const entries = await fetchContent<Entry>(`{
  entries (section: "homepage") {
    title
  }
}`)

if (entries.length === 0) {
  return new Response(null, { status: 404 });
}

const entry = entries[0]
---

{entry.title}
