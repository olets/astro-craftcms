---
/**
 * Pages for "Example Structure" Craft section
 */

import path from 'node:path';
import fetchApi from '@lib/craft-cms/fetch-api';
import url from '@lib/craft-cms/url.ts';

interface Child {
  title: string;
  uri: string;
}

interface Parent {
  title: string;
  uri: string;
}

interface Entry {
  children: Child[];
  parent: Parent;
  title: string;
}

interface Data {
  entries: Entry[];
}

const { slug = '' } = Astro.params;

const data = await fetchApi<Data>(`{
  entries(uri: "${path.join('example-structure', slug)}") {
    children {
      title
      uri
    }
    parent {
      title
      uri
    }
    title
  }
}`);

const entries = data?.entries;

if (entries === undefined || entries.length === 0) {
  return new Response(null, { status: 404 });
}

const entry = entries[0];
---

<dl>
  <dt>title</dt>
  <dd>{entry.title}</dd>

  <dt>parent title</dt>
  <dd>{entry.parent?.title}</dd>

  <dt>parent URL</dt>
  <dd>{url(entry.parent?.uri)}</dd>

  <dt>children</dt>
  <dd>
    <ul>
      {
        entry.children.map((child) => (
          <li>
            <dl>
              <dt>title</dt>
              <dd>{child.title}</dd>

              <dt>URL</dt>
              <dd>{url(child.uri)}</dd>
            </dl>
          </li>
        ))
      }
    </ul>
  </dd>
</dl>
