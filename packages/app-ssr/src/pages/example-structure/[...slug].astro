---
/**
 * Pages for Craft's "Example Structure" section
 */

import { z } from 'zod';
import fetchApi from '@lib/craft-cms/fetch-api';
import url from '@lib/craft-cms/url.ts';

const { slug = '' } = Astro.params;

const query = `{
  entries(uri: "example-structure/${slug}") {
    children {
      title
      uri
    }
    parent {
      title
      uri
    }
    title
  }
}`;

const schema = z.object({
  entries: z
    .object({
      children: z
        .object({
          title: z.string(),
          uri: z.string(),
        })
        .array(),
      parent: z
        .object({
          title: z.string(),
          uri: z.string(),
        })
        .nullable(),
      title: z.string(),
    })
    .array()
    .nonempty(),
});

const data = await fetchApi({
  query,
  schema,
});

if (data === undefined) {
  return new Response(null, { status: 404 });
}

const entry = data.entries[0];
---

<dl>
  <dt>title</dt>
  <dd>{entry.title}</dd>

  <dt>parent title</dt>
  <dd>{entry.parent?.title}</dd>

  <dt>parent URL</dt>
  <dd>{url(entry.parent?.uri)}</dd>

  <dt>children</dt>
  <dd>
    <ul>
      {
        entry.children.map((child) => (
          <li>
            <dl>
              <dt>title</dt>
              <dd>{child.title}</dd>

              <dt>URL</dt>
              <dd>{url(child.uri)}</dd>
            </dl>
          </li>
        ))
      }
    </ul>
  </dd>
</dl>
