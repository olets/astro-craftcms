---
/**
 * Pages for Craft's "Example Structure" section
 */

import fetchApi from '@lib/craft-cms/fetch-api';
import url from '@lib/craft-cms/url.ts';

interface Data {
  entries: {
    children: {
      title: string;
      uri: string;
    }[];
    parent: {
      title: string;
      uri: string;
    };
    title: string;
  }[];
}

const { slug = '' } = Astro.params;

const data = await fetchApi<Data>(`{
  entries(uri: "example-structure/${slug}") {
    children {
      title
      uri
    }
    parent {
      title
      uri
    }
    title
  }
}`);

if (
  data === undefined ||
  data?.entries === undefined ||
  data.entries.length === 0
) {
  return new Response(null, { status: 404 });
}

const entry = data.entries[0];
---

<dl>
  <dt>title</dt>
  <dd>{entry.title}</dd>

  <dt>parent title</dt>
  <dd>{entry.parent?.title}</dd>

  <dt>parent URL</dt>
  <dd>{url(entry.parent?.uri)}</dd>

  <dt>children</dt>
  <dd>
    <ul>
      {
        entry.children.map((child) => (
          <li>
            <dl>
              <dt>title</dt>
              <dd>{child.title}</dd>

              <dt>URL</dt>
              <dd>{url(child.uri)}</dd>
            </dl>
          </li>
        ))
      }
    </ul>
  </dd>
</dl>
