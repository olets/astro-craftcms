---
import getEntries from "@lib/craft-cms/get-entries";
import queryProps from "@queries/homepage.ts";

const cacheDirectory = "homepage";

const entries = await getEntries({ queryProps, dataDirectory: cacheDirectory });

const entry = entries[0];

if (!entry) {
  return new Response(null, { status: 404 });
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{entry.title} :: astro-craftcms</title>
  </head>
  <body>
    This is the homepage.

    <dl>
      <dt>title</dt>
      <dd>{entry.title}</dd>
    </dl>
  </body>
</html>
