---
import type { InferGetStaticParamsType, GetStaticPaths } from "astro";
import getEntries from "@lib/craft-cms/get-entries";
import getEntry from "@lib/craft-cms/get-entry";
import queryProps from "@queries/example-channel.ts";
import staticPaths from "@data/example-channel/static-paths.ts";

type Params = InferGetStaticParamsType<typeof getStaticPaths>;

const cacheDirectory = "example-channel";

const uriPrefix = cacheDirectory;

const { path: pathParam } = Astro.params as Params;

const entries = await getEntries({ queryProps, dataDirectory: cacheDirectory });

const entry = getEntry({
  entries,
  pathParam,
  uriPrefix,
});

if (!entry) {
  return new Response(null, { status: 404 });
}

export const getStaticPaths = (async () => {
  return staticPaths;
}) satisfies GetStaticPaths;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{entry.title} :: astro-craftcms</title>
  </head>
  <body>
    This is a page in the Example Channel section

    <dl>
      <dt>title</dt>
      <dd>{entry.title}</dd>
    </dl>
  </body>
</html>
