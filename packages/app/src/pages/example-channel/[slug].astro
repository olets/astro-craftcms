---
import type { InferGetStaticParamsType, GetStaticPaths } from "astro";
import getEntry from "@utilities/get-entry.ts";
import queryProps from "./_/query-props.ts"
import { entries, staticPaths, uriPrefix } from "./_/cache/data.ts";

type Params = InferGetStaticParamsType<typeof getStaticPaths>;

const { slug } = Astro.params as Params;
const entry = await getEntry<(typeof entries)[number]>({
  entries,
  queryProps,
  slug,
  uriPrefix,
});

if (!entry) {
  Astro.response.status = 404;
  return;
}

export const getStaticPaths = (async () => {
  return staticPaths;
}) satisfies GetStaticPaths;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{slug} :: astro-craftcms</title>
  </head>
  <body>
    This is a page in the Example Channel section

    <dl>
      <dt>title</dt>
      <dd>{entry.title}</dd>
      <dt>slug</dt>
      <dd>{slug}</dd>
    </dl>
  </body>
</html>
