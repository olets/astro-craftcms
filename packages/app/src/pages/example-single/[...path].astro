---
import type { InferGetStaticParamsType, GetStaticPaths } from "astro";
import getSectionEntry from "@lib/craft-cms/get-section-entry.ts";
import queryProps from "@queries/example-single.ts";
import staticPaths from "@data/example-single/static-paths.ts";

type Params = InferGetStaticParamsType<typeof getStaticPaths>;

const uriPrefix = "example-single";

const { path: pathParam } = Astro.params as Params;
const entry = await getSectionEntry({
  queryProps,
  pathParam,
  uriPrefix,
});

if (!entry) {
  return new Response(null, { status: 404 });
}

export const getStaticPaths = (async () => {
  return staticPaths;
}) satisfies GetStaticPaths;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{entry.title} :: astro-craftcms</title>
  </head>
  <body>
    This is the page in the Example Single section

    <dl>
      <dt>title</dt>
      <dd>{entry.title}</dd>
    </dl>
  </body>
</html>
