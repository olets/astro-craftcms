---
/**
 * Pages for Craft's "Example Channel" section
 */

import { z } from 'zod';
import type { GetStaticPaths } from 'astro';
import cachedStaticPaths from '@cache/sections__exampleChannel/static-paths.json';
import config from '@config/sections/exampleChannel';
import fetchAPI from '@lib/craft-cms/fetch-api';
import staticPaths from '@lib/craft-cms/static-paths';

const { querySchema } = config;

/**
 * `Props` interface is tied to Astro.props
 * https://docs.astro.build/en/guides/typescript/#component-props
 */
interface Props {
  entry: z.infer<typeof querySchema.shape.entries.element>;
}

export const getStaticPaths = (async () => {
  if (import.meta.env.PROD) {
    return cachedStaticPaths;
  }

  const { query, querySchema, uriPrefix } = config;

  const data = await fetchAPI({
    query,
    schema: querySchema,
  });

  return await staticPaths({ entries: data.entries, uriPrefix });
}) satisfies GetStaticPaths;

const { entry } = Astro.props;
---

{entry.title}
