---
/**
 * Pages for Craft's "Example Structure" section
 */

import { z } from 'zod';
import type { GetStaticPaths, GetStaticPathsResult } from 'astro';
import config from '@config/sections/exampleStructure';
import fetchAPI from '@lib/craft-cms/fetch-api';
import staticPaths from '@lib/craft-cms/static-paths';
import url from '@lib/craft-cms/url';

const { querySchema } = config;

/**
 * `Props` interface is tied to Astro.props
 * https://docs.astro.build/en/guides/typescript/#component-props
 */
interface Props {
  entry: z.infer<typeof querySchema.shape.entries.element>;
}

export const getStaticPaths = (async () => {
  if (import.meta.env.PROD) {
    const cachedStaticPathsModule: Record<'default', GetStaticPathsResult>[] =
      await Astro.glob('@cache/sections__exampleStructure-*/static-paths.json');

    const cachedStaticPaths = cachedStaticPathsModule[0].default;

    return cachedStaticPaths;
  }

  const { query, querySchema, uriPrefix } = config;

  const data = await fetchAPI({
    query,
    schema: querySchema,
  });

  return await staticPaths({ entries: data.entries, uriPrefix });
}) satisfies GetStaticPaths;

const { entry } = Astro.props;
---

<dl>
  <dt>title</dt>
  <dd>{entry.title}</dd>

  <dt>parent title</dt>
  <dd>{entry.parent?.title}</dd>

  <dt>parent URL</dt>
  <dd>{url(entry.parent?.uri)}</dd>

  <dt>children</dt>
  <dd>
    <ul>
      {
        entry?.children.map((child) => (
          <li>
            <dl>
              <dt>title</dt>
              <dd>{child.title}</dd>

              <dt>URL</dt>
              <dd>{url(child.uri)}</dd>
            </dl>
          </li>
        ))
      }
    </ul>
  </dd>
</dl>
