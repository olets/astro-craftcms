---
/**
 * Pages for Craft's "Example Structure" section
 */

import type { GetStaticPaths } from 'astro';
import url from '@lib/craft-cms/url';
import staticPaths from '@cache/sections__exampleStructure/static-paths.json';

export const getStaticPaths = (async () => {
  return staticPaths;
}) satisfies GetStaticPaths;

const { entry } = Astro.props;
---

<dl>
  <dt>title</dt>
  <dd>{entry.title}</dd>

  <dt>parent title</dt>
  <dd>{entry.parent?.title}</dd>

  <dt>parent URL</dt>
  <dd>{url(entry.parent?.uri)}</dd>

  <dt>children</dt>
  <dd>
    <ul>
      {
        entry.children.map((child) => (
          <li>
            <dl>
              <dt>title</dt>
              <dd>{child.title}</dd>

              <dt>URL</dt>
              <dd>{url(child.uri)}</dd>
            </dl>
          </li>
        ))
      }
    </ul>
  </dd>
</dl>
