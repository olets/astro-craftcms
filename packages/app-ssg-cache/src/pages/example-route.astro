---
import { z } from 'zod';
import config from '@config/routes/example-route';
import url from '@lib/craft-cms/url';
import fetchAPI from '@lib/craft-cms/fetch-api';

const { query, schema } = config;

const cachedData: z.infer<typeof schema>[] = await Astro.glob(
  '@cache/routes__example-route__*/data.json',
);

const data = import.meta.env.PROD
  ? cachedData[0]
  : await fetchAPI({
      query,
      schema,
    });
---

<table>
  <thead>
    <tr>
      <th>sectionHandle</th>
      <th>title</th>
      <th>typeHandle</th>
      <th>url</th>
      <th>visit</th>
    </tr>
  </thead>
  <tbody>
    {
      data.entries.map((entry: any) => (
        <tr>
          <td>{entry.sectionHandle}</td>
          <td>{entry.title}</td>
          <td>{entry.typeHandle}</td>
          <td>{url(entry.uri)}</td>
          <td>
            <a href={url(entry.uri)}>Go</a>
          </td>
        </tr>
      ))
    }
  </tbody>
</table>
